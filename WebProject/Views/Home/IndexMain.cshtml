@model MainPage
@{
    ViewData["Title"] = "Основная страница сайта";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Подключение шрифтов и стилей -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/js/site.js"></script>
    <title>@ViewData["Title"]</title>

    <style>
        /* ---------------------- БАЗОВЫЕ СТИЛИ ---------------------- */
        :root {
            --primary-color: #0078D7;
            --secondary-color: #4d79ff;
            --danger-color: #ff4d4d;
            --text-dark: #2c3e50;
            --text-light: #f8f9fa;
        }

        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            color: var(--text-dark);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* ---------------------- ШАПКА ---------------------- */
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
            background: rgba(255, 255, 255, 0.95);
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo-img {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-color);
        }

        /* ---------------------- ОСНОВНОЙ КОНТЕНТ ---------------------- */
        .main-container {
            flex: 1;
            display: grid;
            grid-template-columns: 1fr 1fr; /* Две колонки */
            gap: 3rem;
            padding: 3rem 3rem;
            max-width: 1600px;
            margin: 0 auto;
            position: absolute;
            position-area: center;
            align-items: center;
        }

        .content-section {
            padding: 2rem;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
        }

        .hero-image {
            width: 100%;
            height: auto;
            border-radius: 15px;
            transform: perspective(1000px) rotateY(0);
            box-shadow: 20px 20px 40px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }

        .hero-image:hover {
            transform: perspective(1000px) rotateY(-5deg);
        }

        /* ---------------------- КНОПКИ ---------------------- */
        .button-group {
            display: grid;
            gap: 1.5rem;
            margin-top: 2.5rem;
        }

        .action-button {
            padding: 1.2rem 2.5rem;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.8rem;
        }

        .emergency-btn {
            background: var(--danger-color);
            color: white;
        }

        .schedule-btn {
            background: var(--secondary-color);
            color: white;
        }

        .action-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        /* ---------------------- ФУТЕР ---------------------- */
        .footer-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 2rem;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            flex-direction: column;
            text-align: center;
            position: absolute;
            bottom: 0;
            width: 100%;
            max-height: 150px;
        }

        /* ---------------------- АДАПТИВНОСТЬ ДЛЯ СРЕДНИХ ЭКРАНОВ ---------------------- */
        media (max-width: 1024px) {
            .main-container {
                grid-template-columns: 1fr;
                padding: 2rem;
            }

            .hero-image {
                max-width: 80%;
                margin: 0 auto;
            }
        }

        media (max-width: 768px) {
            .header {
                flex-direction: column;
                gap: 1rem;
                padding: 1rem;
            }

            .action-button {
                width: 100%;
                padding: 1rem;
            }

            .content-section {
                padding: 1.5rem;
            }
        }

        media (max-width: 480px) {
            .main-container {
                padding: 1rem;
            }

            .hero-image {
                max-width: 100%;
            }

            .button-group {
                grid-template-columns: 1fr;
            }
        }

        /* ---------------------- АДАПТИВНОСТЬ ДЛЯ БОЛЬШИХ ЭКРАНОВ (Full HD) ---------------------- */
        media (min-width: 1920px) and (max-width: 2559px) {
            body {
                font-size: 18px; /* немного крупнее шрифт */
            }
            .main-container {
                max-width: 1600px; /* чуть больше ширина контейнера */
                gap: 4rem;         /* увеличиваем отступы */
                padding: 4rem 3rem;
            }
            .content-section {
                padding: 3rem;
                border-radius: 25px;
            }
            .hero-image {
                box-shadow: 25px 25px 50px rgba(0, 0, 0, 0.15);
            }
        }

        /* ---------------------- АДАПТИВНОСТЬ ДЛЯ 2K/QHD (2560×1440) ---------------------- */
        media (min-width: 2560px) {
            body {
                font-size: 20px; /* ещё чуть больше шрифт */
            }
            .main-container {
                max-width: 2000px;
                gap: 5rem;
                padding: 5rem 4rem;
            }
            .content-section {
                padding: 3.5rem;
                border-radius: 30px;
            }
            .hero-image {
                box-shadow: 30px 30px 60px rgba(0, 0, 0, 0.15);
            }
        }
    </style>
</head>
<body>
    <header class="header">
        <div class="logo-container">
            <img class="logo-img" src="~/image/imgODKB.jpg" alt="Logo">
            <h1 class="h1Main">ГАУЗ "ОДКБ"</h1>
        </div>
        <div class="dropdown">
            <button class="dropbtn">👤 @Model.UserName</button>
            <div class="dropdown-content">
                <a asp-action="UserSetting">⚙️ Настройки</a>
                <a asp-action="Logout">🚪 Выйти</a>
            </div>
        </div>
    </header>

    <main class="main-container">
        <div class="content-section">
            <h1 class="main-title">Добро пожаловать в хирургический планировщик</h1>
            <p class="main-subtitle">Выберите тип операции:</p>
            <div class="button-group">
                <a asp-action="IndexEmergency" class="action-button emergency-btn">
                    🚨 Экстренная операция
                </a>
                <a asp-action="IndexScheduled" class="action-button schedule-btn">
                    📅 Запланировать операцию
                </a>
            </div>
        </div>

        <div class="content-section">
            <img src="~/image/doctor.jpg" alt="Medical Team" class="hero-image">
        </div>
    </main>

    <footer class="footer-container">
        <div class="contact-info">
            <h3>Контакты</h3>
            <p>📞 +7 (953) 453-44-76</p>
            <p>📩 <a href="https://t.me/omori4ch">Telegram</a></p>
        </div>
        <div class="contact-info">
            <h3>Адрес</h3>
            <p>📍 г. Москва, ул. Медицинская, 15</p>
            <p>⏰ Пн-Пт: 8:00 - 20:00</p>
        </div>
    </footer>
</body>
</html>