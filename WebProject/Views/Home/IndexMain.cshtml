@model MainPage
@{
    ViewData["Title"] = "Основная страница сайта";
}
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styles.css" />
    <script src="~/js/site.js"></script>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(120deg, #f0f4ff, #d9e4ff);
            color: #333;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            background: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .h1Main {
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

        .imgODKB {
            margin-right: 10px;
        }

        .dropdown {
            position: relative;
        }

        .dropbtn {
            background-color: #0078D7;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #f1f1f1;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .main-container {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
            padding: 50px 20px;
        }

        .main-content-index {
            margin-right: 20px;
        }

        .main-title {
            font-size: 2rem;
            color: #0078D7;
        }

        .main-subtitle {
            font-size: 1.2rem;
            margin-top: 10px;
            color: #555;
        }

        .button-container {
            margin-top: 20px;
        }

        .button {
            padding: 10px 20px;
            font-size: 1rem;
            margin-right: 10px;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
        }

            .button:hover {
                opacity: 0.9;
            }

        .signup-image img {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .footer-container {
            text-align: center;
            padding: 10px 20px;
            background-color: #ffffff;
            box-shadow: 0 -4px 6px rgba(0, 0, 0, 0.1);
        }

        .contactInfo {
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <div class="mainPage">
        <header class="header">
            <h1 class="h1Main">
                <img class="imgODKB" src="~/image/imgODKB.jpg" width="60" height="60" alt="Logo">ГАУЗ "ОДКБ"
            </h1>
            <div class="dropdown">
                <button class="dropbtn">Логин: <label>@Model.UserName</label></button>
                <div class="dropdown-content">
                    <a asp-action="UserSetting">Настройки</a>
                    <a asp-action="Logout">Выйти</a>
                </div>
            </div>
        </header>
    </div>

    <div class="main-container">
        <div class="main-content-index">
            <h1 class="main-title">Добро пожаловать на главную страницу сайта!</h1>
            <p class="main-subtitle">Выберите одно из двух:</p>
            <div class="button-container">
                <a asp-action="IndexEmergency">
                    <button type="button" class="button" style="background-color: #ff4d4d;">Экстренная операция</button>
                </a>
                <a asp-action="IndexScheduled">
                    <button type="button" class="button" style="background-color: #4d79ff;">Запланировать операцию</button>
                </a>
            </div>
        </div>
        <div class="signup-image">
            <figure>
                <img src="~/image/doctor.jpg" alt="Doctor">
            </figure>
        </div>
    </div>

    <footer class="footer-container">
        <p class="contactInfo">Телефон связи: <code>+7(953)453-44-76</code></p>
        <p class="contactInfo">Обратная связь в Telegram: <code><a href="https://t.me/omori4ch">https://t.me/omori4ch</a></code></p>
    </footer>
</body>
</html>