@model Home
@{
    ViewData["Title"] = "Страница авторизации";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
<body>
    <div class="main">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h1>Вход в систему</h1>
                    <p>Мы рады вас видеть.</p>

                    <form method="post" asp-controller="Home" asp-action="Index">

                        <label asp-for="Name">Ваше имя:</label>
                        <div class="input-icons">
                            <i class="fa fa-user ico"></i>
                            <input class="inputReg" type="text" id="name" asp-for="Name" placeholder="Введите ваше имя">
                        </div>
                        <span asp-validation-for="Name"></span>

                        <label asp-for="Password">Введите пароль:</label>
                        <div class="input-icons">
                            <i class="fa fa-user ico"></i>
                            <input class="inputReg" type="password" id="password" asp-for="Password" placeholder="Введите ваш пароль">
                        </div>
                        <span asp-validation-for="Password"></span>

                        <label asp-for="ReplayPassword">Введите пароль ещё раз:</label>
                        <div class="input-icons">
                            <i class="fa fa-key ico"></i>
                            <input type="password" id="password" asp-for="ReplayPassword" placeholder="Введите ваш пароль">
                        </div>
                        <span asp-validation-for="ReplayPassword"></span>

                        <input typeof="input" type="submit" value="Войти" style="background-color: green; height: 40px; width: 210px; float: right">
                    </form>
                </div>
                <div class="signup-image">
                    <figure>
                        <img src="image/image-min.png">
                    </figure>
                </div>
            </div>
        </div>
    </div>
</body>