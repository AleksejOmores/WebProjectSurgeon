@{
    ViewData["Title"] = "Запланированные операции";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Базовые стили */
        :root {
            --primary: #2A5C82;
            --secondary: #5BA4E6;
            --accent: #FF6B6B;
            --text: #2C3E50;
            --background: #F8FAFC;
            --border: #E2E8F0;
        }

        body {
            font-family: 'Inter', sans-serif;
            margin: 0;
            background-color: var(--background);
            color: var(--text);
            display: flex;
            min-height: 100vh;
        }

        /* Боковое меню */
        .sidebar {
            width: 260px;
            background: white;
            box-shadow: 4px 0 15px rgba(0, 0, 0, 0.05);
            padding: 1.5rem;
            transition: 0.3s transform;
            position: fixed;
            height: 100vh;
            z-index: 1000;
        }

        .sidebar.collapsed {
            transform: translateX(-100%);
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li a {
            display: block;
            padding: 0.75rem 1rem;
            border-radius: 8px;
            color: var(--text);
            text-decoration: none;
            transition: 0.2s all;
            margin: 0.25rem 0;
        }

        .sidebar-menu li a:hover {
            background: #F1F5F9;
        }

        .sidebar-menu li a.active {
            background: var(--primary);
            color: white;
        }

        /* Основной контент */
        .main-content {
            flex: 1;
            margin-left: 260px;
            padding: 2rem;
            transition: 0.3s margin;
        }

        .calendar-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        /* Выбор операционной */
        .operating-rooms {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
            gap: 1rem;
            margin: 1.5rem 0;
        }

        .room {
            background: white;
            border: 1px solid var(--border);
            padding: 1rem;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.2s all;
            text-align: center;
        }

        .room:hover {
            border-color: var(--primary);
            box-shadow: 0 2px 8px rgba(42, 92, 130, 0.1);
        }

        /* Форма добавления */
        .horizontal-container {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 2rem;
            margin-top: 2rem;
        }

        .add-procedure-block {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            width: 100%;
        }

        .input-group {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text);
        }

        .inputIndex {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid var(--border);
            border-radius: 8px;
            transition: 0.2s border-color;
        }

        .inputIndex:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(42, 92, 130, 0.1);
        }

        .addOperating {
            background: var(--primary);
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            width: 100%;
            font-weight: 500;
            transition: 0.2s transform;
        }

        .addOperating:hover {
            transform: translateY(-2px);
        }

        /* Список операций */
        .operations-list {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .operations-row {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 1rem;
            padding: 1rem;
            align-items: center;
        }

        .operations-row.header {
            background: var(--primary);
            color: white;
            font-weight: 500;
        }

        .operations-cell {
            padding: 0.75rem;
        }
    </style>
</head>
<body>
    <!-- Боковое меню -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>Меню</h2>
            <button onclick="toggleSidebar()">✕</button>
        </div>
        <ul class="sidebar-menu">
            <li><a asp-action="IndexMain">🏠 Главная</a></li>
            <li><a asp-action="IndexEmergency">🚨 Экстренные</a></li>
            <li><a asp-action="IndexScheduled" class="active">📅 Плановые</a></li>
        </ul>
    </div>

    <!-- Основной контент -->
    <div class="main-content">
        <div class="calendar-container">
            <!-- Заголовок и выбор операционной -->
            <div class="header-section">
                <h1>Планирование операций</h1>
                <div class="operating-rooms">
                    @foreach (var room in ViewBag.OperatingRooms)
                    {
                        <button class="room" onclick="selectRoom('@room.RoomId', '@room.RoomName')">@room.RoomName</button>
                    }
                </div>
            </div>

            <!-- Основной контент -->
            <div class="horizontal-container">
                <!-- Форма добавления -->
                <div class="add-procedure-block">
                    <h3>➕ Новая операция</h3>
                    <form id="procedure-form">
                        <div class="input-group">
                            <label>Операционная</label>
                            <input class="inputIndex" type="text" name="OperatingRoomId" id="selected-operating-room-id" readonly>
                        </div>

                        <div class="input-group">
                            <label>Хирург</label>
                            <select class="inputIndex" id="doctor-select" required>
                                <option value="">Выберите хирурга</option>
                                @foreach (var surgeon in ViewBag.Surgeons) {
                                    <option value="@surgeon.SurgeonId">👨⚕️ @surgeon.FullName</option>
                                }
                            </select>
                        </div>

                        <div class="input-group">
                            <label>Начало</label>
                            <input class="inputIndex" type="datetime-local" id="procedure-start-datetime" required>
                        </div>

                        <div class="input-group">
                            <label>Конец</label>
                            <input class="inputIndex" type="datetime-local" id="procedure-end-datetime" required>
                        </div>

                        <button type="button" class="addOperating" onclick="addProcedure()">
                            📌 Запланировать
                        </button>
                    </form>
                </div>

                <!-- Список операций -->
                <div class="operations-list">
                    <div class="operations-row header">
                        <div class="operations-cell">Операционная</div>
                        <div class="operations-cell">Хирург</div>
                        <div class="operations-cell">Начало</div>
                        <div class="operations-cell">Конец</div>
                        <div class="operations-cell">Статус</div>
                    </div>
                    
                    <!-- Пример строки -->
                    <div class="operations-row">
                        <div class="operations-cell" data-label="Операционная">OR-107</div>
                        <div class="operations-cell" data-label="Хирург">Иванов А.П.</div>
                        <div class="operations-cell" data-label="Начало">24.05 14:00</div>
                        <div class="operations-cell" data-label="Конец">24.05 16:30</div>
                        <div class="operations-cell" data-label="Статус"><span class="status-badge">🟢 Запланировано</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('collapsed');
        }

        // Адаптивное меню
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                document.querySelector('.sidebar').classList.remove('collapsed');
            }
        });
    </script>
</body>
</html>

<script>
    function selectRoom(roomId, roomName) {
        document.getElementById("selected-operating-room-id").value = `${roomName}`;
    }

    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('collapsed');
    }

    function addProcedure() {
        const procedureData = {
            SurgeonId: document.getElementById("doctor-select").value,
            StartDateTime: document.getElementById("procedure-start-datetime").value,
            EndDateTime: document.getElementById("procedure-end-datetime").value,
            OperatingRoomId: document.getElementById("selected-operating-room-id").value,
            Status: "Запланировано" 
        };

        fetch('/Home/AddProcedure', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(procedureData)
        })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    document.getElementById("procedure-form").reset();
                    location.reload();
                } else {
                    alert("Ошибка: " + data.message);
                }
            })
            .catch(error => console.error('Ошибка:', error));
    }
</script>